<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ClawController" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background</item>
        
        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Customize your theme here -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ClawController.MediumComponent</item>
    </style>
    
    <!-- Card shape with rounded corners -->
    <style name="ShapeAppearance.ClawController.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Custom button style -->
    <style name="Widget.ClawController.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Token display text style -->
    <style name="TextAppearance.ClawController.Token" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/token_text</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
